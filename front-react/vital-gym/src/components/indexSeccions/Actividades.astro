---
import CardActividades from "./CardActividades.astro";
import actividadesData from "../../../Actividades.json";  
---
<div class="flex flex-col items-center justify-center ">
    <h1 class="text-3xl font-bold mt-6 mb-4">Actividades</h1>
</div>

<section id="actividades" class=" grid  gap-4 mt-10">
    {actividadesData.actividades.map((actividad) => (
        <CardActividades actividad={actividad} />
    ))}

</section>

<style>
    section {

        grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
        grid-auto-rows: minmax(300px, auto);
        gap: 1rem;
        padding: 1rem;
    }
</style>